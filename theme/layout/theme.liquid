<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{% if page_title %}{{ page_title | escape }}{% else %}{{ shop.name | escape }}{% endif %}</title>
  {% render 'seo-meta' %}
  <link rel="canonical" href="{{ canonical_url }}">
  <link rel="preload" href="{{ 'main.css' | asset_url }}" as="style">
  <link rel="stylesheet" href="{{ 'main.css' | asset_url }}">
  <script>document.documentElement.classList.remove('no-js');</script>
  <link rel="alternate" hreflang="en" href="{{ shop.primary_domain.url }}">
  <link rel="alternate" hreflang="de" href="{{ shop.primary_domain.url }}/de">
  {{ content_for_header }}
</head>
<body id="a11y-top" class="template-{{ template.name | handle }}">
  <a class="skip-link" href="#main">{{ 'general.accessibility.skip_to_content' | t }}</a>

  <div id="announcement-region" role="region" aria-label="{{ 'sections.announcement_bar.name' | t }}">
    {% section 'announcement-bar' %}
  </div>

  <header role="banner" aria-label="{{ 'sections.header.name' | t }}">
    {% section 'header' %}
  </header>

  <main id="main" role="main" tabindex="-1">
    {{ content_for_layout }}
  </main>

  <aside id="cart-drawer" class="cart-drawer" aria-hidden="true" aria-labelledby="cart-drawer-title" role="dialog">
    {% section 'cart-drawer' %}
  </aside>

  <footer role="contentinfo">
    {% section 'footer' %}
  </footer>

  <div id="a11y-live" class="visually-hidden" aria-live="polite"></div>

  <script>
    window.themeSettings = {
      freeShippingThreshold: {{ settings.free_shipping_threshold | default: 0 | json }},
      predictiveSearchEnabled: {{ settings.predictive_search_enabled | json }},
      shopCurrency: {{ shop.currency | json }},
      moneyFormat: {{ shop.money_format | json }}
    };
    window.dataLayer = window.dataLayer || [];
  </script>
  <script src="{{ 'main.js' | asset_url }}" defer></script>
</body>
</html>
