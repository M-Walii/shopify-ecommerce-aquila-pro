<div class="cart-drawer__panel" role="document">
  <h2 id="cart-drawer-title">Your cart</h2>
  <button class="icon-button cart-drawer__close" data-close-cart aria-label="Close">×</button>
  <div class="cart-drawer__free-ship" data-free-ship data-threshold="{{ settings.free_shipping_threshold | default: 0 }}">
    <div class="progress"><div class="bar" style="width:0%"></div></div>
    <div class="note" aria-live="polite"></div>
  </div>
  <div class="cart-drawer__items" data-cart-items>
    <p class="visually-hidden">Loading cart…</p>
  </div>
  <div class="cart-drawer__footer">
    <div class="totals">
      <span>Total</span>
      <strong data-cart-total></strong>
    </div>
    <a href="/cart" class="button secondary">View cart</a>
    <a href="/checkout" class="button" data-begin-checkout>Checkout</a>
  </div>
</div>

{% schema %}
{
  "name": "Cart Drawer",
  "settings": []
}
{% endschema %}
