<section class="hero" style="background:#eef2f6">
  <div class="container">
    <h1>{{ section.settings.heading }}</h1>
    <p class="subheading">{{ section.settings.subheading }}</p>
    {% if section.settings.cta_label and section.settings.cta_url %}
      <a class="button" href="{{ section.settings.cta_url }}">{{ section.settings.cta_label }}</a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name":"Home Hero",
  "settings":[
    {"type":"text","id":"heading","label":"Heading","default":"Aquila Pro"},
    {"type":"text","id":"subheading","label":"Subheading","default":"Deals picked for you"},
    {"type":"text","id":"cta_label","label":"CTA label","default":"Shop now"},
    {"type":"url","id":"cta_url","label":"CTA URL","default":"/collections/all"}
  ],
  "presets":[{"name":"Home Hero"}]
}
{% endschema %}
