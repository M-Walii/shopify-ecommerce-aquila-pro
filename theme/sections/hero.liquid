<section class="hero">
  <div class="container">
    <h1>{{ section.settings.heading }}</h1>
    {% if section.settings.subheading != blank %}
      <p class="subheading">{{ section.settings.subheading }}</p>
    {% endif %}
    {% if section.settings.cta_label and section.settings.cta_url %}
      <a class="button" href="{{ section.settings.cta_url }}">{{ section.settings.cta_label }}</a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Aquila Pro" },
    { "type": "text", "id": "subheading", "label": "Subheading" },
    { "type": "text", "id": "cta_label", "label": "CTA Label" },
    { "type": "url", "id": "cta_url", "label": "CTA URL" }
  ],
  "presets": [ { "name": "Hero" } ]
}
{% endschema %}
